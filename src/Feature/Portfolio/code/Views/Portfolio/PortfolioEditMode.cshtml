@using Agency.Feature.Portfolio.Models;
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<PortfolioContainer>

<section class="bg-light" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">@Editable(m => m.Title)</h2>
                <h3 class="section-subheading text-muted">@Editable(m => m.Subtitle)</h3>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < Model.Children.Count(); i++)
            {
                var item = Model.Children.ElementAt(i);
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="@item.Thumbnail.Url" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>@Editable(m => m.Children.ElementAt(i).Client)</h4>
                        <p class="text-muted">@Editable(m => m.Children.ElementAt(i).Category)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Portfolio Modals -->
@for (int i = 0; i < Model.Children.Count(); i++)
{
    var item = Model.Children.ElementAt(i);
    <div class="portfolio-modal modal fade" id="@string.Concat("portfolioModal", i + 1)" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2 class="text-uppercase">@Editable(m => m.Children.ElementAt(i).ProjectName)</h2>
                                <p class="item-intro text-muted">@Editable(m => m.Children.ElementAt(i).ProjectTitle)</p>
                                <img class="img-fluid d-block mx-auto" src="@item.Image.Src" alt="">
                                <p>@Editable(m => m.Children.ElementAt(i).Description)</p>
                                <ul class="list-inline">
                                    <li>Date: @Editable(m => m.Children.ElementAt(i).Date)</li>
                                    <li>Client: @Editable(m => m.Children.ElementAt(i).Client)</li>
                                    <li>Category: @Editable(m => m.Children.ElementAt(i).Category)</li>
                                </ul>
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    <i class="fa fa-times"></i>
                                    Close Project
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
