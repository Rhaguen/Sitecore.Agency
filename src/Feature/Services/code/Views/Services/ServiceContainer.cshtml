@using Agency.Feature.Services.Models;
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ServicesContainer>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">@Model.Title</h2>
            <h3 class="section-subheading text-muted">@Model.Subtitle</h3>
        </div>
    </div>
    <div class="row text-center">

        @foreach (var serviceItem in Model.Children)
        {
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="@string.Format("fa fa-{0} fa-stack-1x fa-inverse", serviceItem.IconType)"></i>
                </span>
                <h4 class="service-heading">@serviceItem.Title</h4>
                <p class="text-muted">@serviceItem.Description</p>
            </div>
        }

    </div>
</div>